<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/frogo_rv_dimen_150dp"
        android:layout_height="@dimen/frogo_rv_dimen_150dp"
        android:src="@drawable/frogo_rv_ic_empty_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/frogo_rv_dimen_8dp"
        android:text="@string/frogo_rv_no_data_found"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="@dimen/frogo_rv_dimen_20sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frogo_rv_please_insert_data" />

</LinearLayout>